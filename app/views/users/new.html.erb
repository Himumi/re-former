<% @user.errors.full_messages_for(:username).each do |message| %>
  <div><%= message %></div>
<% end %>
<% @user.errors.full_messages_for(:email).each do |message| %>
  <div><%= message %></div>
<% end %>
<% @user.errors.full_messages_for(:password).each do |message| %>
  <div><%= message %></div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, placeholder: "Enter your username" %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "Enter your email"  %>
  <%= form.label :password %>
  <%= form.password_field :password, placeholder: "Enter your password"  %>
  <%= form.submit "Submit" %>
<% end %>

